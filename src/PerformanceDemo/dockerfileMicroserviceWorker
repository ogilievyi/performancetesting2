ARG Version=0.0.0
FROM mcr.microsoft.com/dotnet/aspnet:6.0-alpine AS base
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
ARG Version
COPY . /Build
WORKDIR /Build
RUN dotnet publish ./MicroserviceWorker/MicroserviceWorker.csproj -c Release -o /tmp/app /p:Version=$Version

FROM base AS final
WORKDIR /app
COPY --from=build /tmp/app .
ENTRYPOINT ["dotnet", "MicroserviceWorker.dll"]
